<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fotoIngrediente"
        android:layout_width="@dimen/sandwich_item_row_foto_ingrediente_layout_width"
        android:layout_height="@dimen/sandwich_item_row_foto_ingrediente_layout_height"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingTop="@dimen/sandwich_item_row_linear_layout_padding_top"
        android:layout_height="@dimen/sandwich_item_row_linear_layout_layout_height"
        android:layout_toEndOf="@id/fotoIngrediente"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeLanche"
            android:layout_width="match_parent"
            android:padding="@dimen/sandwich_item_row_nome_lanche_padding"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/precoLanche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ingredientesLanche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
